.header-toolbar {
  z-index: 100;
  position: fixed;
  top: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  align-items: center;
  background-color: #F8F8F8;
  box-shadow: 0px 3px 10px -3px rgba(5,5,5,0.31);
}
.footer-toolbar {
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  align-items: center;
  background-color: #F8F8F8;
  box-shadow: 0px -3px 10px -3px rgba(5,5,5,0.31);
}
.footer-toolbar-qty {
  color: gray;
}
.image-button-select {
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}
.image-button-allselect {
  position:fixed;
  left:0px;
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.scroll {
  margin-top: 100rpx;
  margin-bottom: 80rpx; 
}
.item {
  display: flex;
  flex-direction: row;
}
.item-select {
  align-self: center;
  margin: 10px;
}
.item-navigator {
  width: 100%;
}
.item-navigator-image {
  width: 180rpx;
  height: 180rpx;
  margin: 5rpx;
}
.item-navigator-content {
  display: flex;
  flex-direction: column;
}
.item-navigator-content-text {

}
.item-navigator-content-price {
  color: red;
  position: relative;
  margin-top: 70rpx;
}
.item-toolbar{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10rpx;
  border-top: solid 1rpx lightgray;
}